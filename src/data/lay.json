{
  "sections": [
    // массив секций
    {
      "id": "string",
      "header": {
        // заголовок секции
        "title": "string",
        "align": "string",
        "heading_size": "number"
      },
      "blocks": [
        // массив блоков в секции
        {
          "id": "string",
          "fields": {
            // список полей в блоке
            "fieldName": {
              "width": "number" // Ширина поля относительно блока (100% = 24). Не обязательный параметр, если не указана будет 24
            }
          },
          "width": "number" // не обязательный параметр. Если не указана, при "layout"="column" будет во всю ширину, при "layout"="row" 100%/число блоков в секции
        }
      ],
      "settings": {
        "layout": "column" | "row" // тип лэйаута
      }
    }
  ]
}
